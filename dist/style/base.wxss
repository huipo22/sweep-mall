/* 优惠券 */

.wrapper {
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.wrapper>.left {
  flex: 1.5;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, #ffa600, #f70);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wrapper>.left>.top {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  width: 100%;
  height: 60%;
  border-bottom: 1rpx dashed #ccc;
}

.wrapper>.left>.bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  height: 40%;
}

.wrapper>.center {
  flex: 3;
  display: flex;
  flex-direction: column;
  height: 100%;
  /* justify-content: space-evenly; */
  padding: 10rpx 0 0 20rpx;
}

.wrapper>.center>.top {
  font-size: 36rpx;
}

.wrapper>.center>.bottom {
  padding-top: 20rpx;
  font-size: 25rpx;
}

.wrapper>.right {
  flex: 1;
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
}

.wrapper>.right>.top {
  border-radius: 50rpx;
  /* background: rgb(231, 226, 226); *//* color: rgb(82, 79, 79); */
  color: #fff;
  background: #f70;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

