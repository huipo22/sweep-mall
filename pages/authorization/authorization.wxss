.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  /* border-radius: 80rpx; */
  margin: 40rpx 10rpx;
  font-size: 35rpx;
  background: #f70;
  color: #fff;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex:1;
}
.gray{
  background: #9d9d9d;
}
