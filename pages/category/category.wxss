/* pages/category/category.wxss */

.container {
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  /* height: 80vh; */
}

.goodContent {
  display: flex;
  flex-direction: row;
  margin-top: 70rpx;
  /* padding: 0 20rpx 0 0; */
}

.goodContent>.left, .right {
  flex: 1;
}

.goodContent>.right {
  display: flex;
  justify-content: flex-end;
}

/* search */

.topSearch {
  width: 100%;
  height: 80rpx;
  background: #fff;
  margin: 20rpx;
  /* display: flex; */
  border-radius: 8rpx;
}

.topSearch>.top_search {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
}

.btnText {
  background: #f70;
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
  height: 60rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 0;
}
