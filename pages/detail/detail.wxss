/* pages/detail/detail.wxss */

.goodDetail {
  width: 100%;
}

.goodDetailCon {
  width: 100%;
  background: #fff;
}

.goodDetailCon_title {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.priceBox {
  display: flex;
  align-items: center;
  color: #f70;
}

.btn {
  width: 100px;
}

.title {
  padding: 0 20rpx;
  font-weight: 500;
}

.con {
  display: flex;
  margin: 20rpx 0;
  background: #fff;
  padding: 20rpx 0;
}

.con>.left {
  flex: 4;
}

.con>.right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 30rpx;
}

.renminb {
  font-size: 24rpx;
}

.hah {
  flex: 1;
  display: flex;
  align-items: center;
}

.gray {
  font-size: 26rpx;
  color: #999;
}

.num {
  flex: 1;
  display: flex;
  align-items: center;
}

.shareIcon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #f70;
}
