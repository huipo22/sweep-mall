<!-- index.wxml -->
<view class="container">
  <!-- 轮播 -->
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <view class="swiper-item {{item}}"></view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="Box">
    <van-row>
      <van-tabs active="{{ active }}">
        <van-tab title="标签 1">内容 1</van-tab>
        <van-tab title="标签 2">内容 2</van-tab>
        <van-tab title="标签 3">内容 3</van-tab>
        <van-tab title="标签 4">内容 4</van-tab>
        <van-tab title="标签 5">内容 5</van-tab>
        <van-tab title="标签 6">内容 6</van-tab>
      </van-tabs>
    </van-row>
  </view>
  <view class="Box">
    <van-tree-select items="{{ items }}" main-active-index="{{ mainActiveIndex }}" bind:click-nav="onClickNav">
      <view slot="content" wx:if="{{ mainActiveIndex === 0 }}">
        <van-card title="商品标题" thumb="https://img.yzcdn.cn/vant/t-thirt.jpg">
          <view slot="bottom" style="margin-top:120rpx">
            <van-row>
              <van-col span="12">32</van-col>
              <van-col span="12">img</van-col>
            </van-row>
          </view>
        </van-card>
      </view>
      <view slot="content" wx:if="{{ mainActiveIndex ===1 }}">333444</view>
    </van-tree-select>
  </view>
</view>