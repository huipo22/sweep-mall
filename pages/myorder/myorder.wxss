/* pages/myorder/myorder.wxss */

.subscrbeFont {
    font-size: 0.5rem;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    position: relative;
}

.Box {
    background: #fff;
}

.goodInfo {
    display: flex;
}

.orderInfo {
    display: flex;
    flex-direction: row;
    font-size: 0.5rem;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.priceBox {
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    /* padding: 10rpx 30rpx; */
    font-size: 22rpx;
    height: 45rpx;
}

.pprice {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
}

.to {
    border-top: 1rpx solid #ddd;
}

.sumPri {
    padding: 20rpx 30rpx;
    font-size: 0.5rem;
}

.orderInfo>.order-num {
    display: flex;
    flex: 1;
    justify-content: flex-start;
}

.orderInfo>.order-datetime {
    display: flex;
    flex: 1;
    justify-content: flex-end;
}

.goodInfo>.left {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: left;
}

.goodInfo>.right {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.goodInfoNum {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.redColor {
    color: red;
}

.redPrice {
    display: flex;
    justify-content: flex-end;
    color: red;
}

.subscrbeImg {
    display: flex;
    align-items: center;
    justify-content: center;
}

.status {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: 1px solid#ccc;
    transform: rotate(-20deg);
    position: absolute;
    right: 13%;
    top: 50%;
    transform: translate(-13%, -50%);
    color: red;
    background: transparent;
}
.btnStatus{
    display: flex;
    justify-content: flex-end;
}