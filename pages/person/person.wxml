<!-- pages/person.wxml -->
<view class="container">
  <!-- 头像 -->
  <view class="Box">
    <view class="avatarBox">
      <view class="avatar">
        <van-image round width="2.5rem" height="2.5rem" src="{{userInfo.avatarUrl}}" />
      </view>
      <view class="userInfo">
        <text>{{userInfo.nickName}}</text>
        <!-- <text>李四</text> -->
      </view>
      <view class="jifen">
        <image class="" src="../../dist/icon/jifen.png" mode="aspectFit|aspectFill|widthFix"></image>
        <text>{{userData.score}}</text>
      </view>
    </view>
  </view>
  <!-- 个人中心列表 -->
  <van-cell-group class="Box">
    <van-cell title="我的预约" icon="location-o" is-link url="../mySubscribe/mySubscribe" />
    <van-cell title="我的优惠券" icon="location-o" is-link url="../mycoupon/mycoupon" />
    <van-cell title="我的订单" icon="location-o" is-link url="../myorder/myorder" />
    <!-- <van-cell title="我的积分" icon="location-o" is-link /> -->
    <van-cell title="联系开发小程序" icon="location-o" bind:tap="call" />
  </van-cell-group>
</view>