/* pages/search/search.wxss */

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: whitesmoke;
  /* margin-top: 5%; */
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
  background:#fff;
}

/* 搜索框提示文字样式 */

.search input {
  font-size: 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
  width: 100%;
}

/* 搜索框小图标 */

.s_icon {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}

.conBox {
  height: 800px;
  width: 100%;
}

.menu_tab_list {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}

.menu_tab_list_good {
  width: 49%;
  overflow: hidden;
  background: #fff;
  margin: 3rpx;
}

.menu_tab_list_good image {
  width: 100%;
  height: 350rpx;
}

.good_detail {
  padding: 10rpx;
}
.re_title{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}