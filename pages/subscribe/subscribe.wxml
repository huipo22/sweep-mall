<!-- pages/subscribe/subscribe.wxml -->
<view class="container">
    <van-image class="Box" width="100%" height="160px" src="https://img.yzcdn.cn/vant/cat.jpeg" />
    <van-card title="商品标题" thumb="https://img.yzcdn.cn/vant/t-thirt.jpg" class="Box">
        <view slot="bottom" style="margin-top:120rpx">
            <van-row>
                <van-col span="6">32</van-col>
                <van-col span="18">
                    <view bind:tap="btnClick">预约</view>
                </van-col>
            </van-row>
        </view>
    </van-card>
    <view class="section">
        <yycalendar show='{{isShow}}' beginTime="{{beginTime}}" endTime="{{endTime}}" timeGap="{{timeGap}}" themeColor="{{themeColor}}" showOverdue="{{showOverdue}}" calendarType="{{calendarType}}" title="预约时间" timeSlotList="{{timeSlotList}}" monthCount="1" bind:yybindchange="_yybindchange" bind:yybindhide="_yybindhide" />
    </view>
</view>