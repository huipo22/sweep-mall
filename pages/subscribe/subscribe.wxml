<!-- pages/subscribe/subscribe.wxml -->
<view class="container">
    <van-image class="Box" width="100%" height="160px" src="https://img.yzcdn.cn/vant/cat.jpeg" />
    <van-card title="商品标题" thumb="https://img.yzcdn.cn/vant/t-thirt.jpg" class="Box">
        <view slot="bottom" style="margin-top:120rpx">
            <van-row>
                <van-col span="6">32</van-col>
                <van-col span="18">
                    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
                        <view>
                            <text>{{orderData}}</text>
                        </view>
                    </picker>
                </van-col>
            </van-row>
        </view>
    </van-card>
    <view class="section"></view>
</view>